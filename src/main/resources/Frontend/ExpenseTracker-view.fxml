<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_LEFT" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="Frontend.ExpenseTrackerController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <!-- HBox to place Label and TextFields side by side -->
    <HBox spacing="10.0" alignment="TOP_LEFT">
        <Label fx:id="dateRangeLabel" text="Show expenses in date range: "/>
        <TextField fx:id="lowerDateRangeText" text="05-09-2024"/>
        <TextField fx:id="upperDateRangeText" text="05-09-2024"/>
        <Button text="Show!" onAction="#onDateRangeShowButtonClick"/>
        <Label fx:id="dateRangeErrorMessage" text="" style="-fx-text-fill: red;"/>
    </HBox>

    <!-- TableView to show the expenses -->
    <TableView fx:id="expenseTable" prefHeight="300" prefWidth="600">
        <columns>
            <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="150"/>
            <TableColumn fx:id="costColumn" text="Cost" prefWidth="100"/>
            <TableColumn fx:id="dateColumn" text="Date" prefWidth="150"/>
            <TableColumn fx:id="categoryColumn" text="Category" prefWidth="150"/>
        </columns>
    </TableView>
</VBox>
